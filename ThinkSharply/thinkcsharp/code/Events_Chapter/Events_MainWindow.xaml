            <Image   Canvas.Left="68" Canvas.Top="50" Height="34" Name="ball" Stretch="None" Width="34" DataContext="{Binding}" Source="/Events_Chapter;component/Images/ball.png" />
        </Canvas>
    </Grid>
</Window>
