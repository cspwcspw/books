<Window x:Class="Window_design_chapter.WhereAmI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="My Whereabouts" Height="300" Width="276">
    <Grid>
        <Label Content="Where am I?" Height="40" HorizontalAlignment="Left" Margin="27,15,0,0" Name="label1" VerticalAlignment="Top" Width="208" FontWeight="Bold" FontStyle="Normal" FontSize="24" FontFamily="Segoe Script" />
        <GroupBox Height="181" HorizontalAlignment="Left" Margin="26,61,0,0" Name="groupBox1" VerticalAlignment="Top" Width="202">
            <Grid>
                <RadioButton Content="Dining Room" Height="16" HorizontalAlignment="Left" Margin="20,42,0,0" Name="radioButton1" VerticalAlignment="Top" />
                <RadioButton Content="Gone to Town" Height="16" HorizontalAlignment="Left" Margin="20,109,0,0" Name="radioButton2" VerticalAlignment="Top" />
                <RadioButton Content="At a Lecture" Height="16" HorizontalAlignment="Left" Margin="20,10,0,0" Name="radioButton3" VerticalAlignment="Top" />
                <RadioButton Content="At the Pool" Height="16" HorizontalAlignment="Left" Margin="20,74,0,0" Name="radioButton4" VerticalAlignment="Top" IsChecked="True" />
                <RadioButton Content="Other" Height="16" HorizontalAlignment="Left" Margin="20,142,0,0" Name="radioButton5" VerticalAlignment="Top" />
            </Grid>
        </GroupBox>
    </Grid>
</Window>
